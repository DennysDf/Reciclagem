                    distributed: true
                }
            },
            title: {
                text: 'Gráfico por compras realizadas',
                align: 'center',
                margin: 10,
                offsetX: 0,
                offsetY: 0,
                floating: false,
                style: {
                    fontSize: '16px',
                }
            },
            subtitle: {
                text: 'Sem período determinado',
                align: 'center',
                margin: 10,
                offsetX: 0,
                offsetY: 30,
                floating: false,
                style: {
                    fontSize: '9px',
                }
            },
            tooltip: {
                y: {
                    formatter: function (value, { seriesIndex, dataPointIndex, w }) {
                        return value
                    },
                    title: {
                        formatter: (seriesName) => seriesName,
                    },
                }

            },
            responsive: [{
                breakpoint: 1000,
                options: {}
            }]
        }

        var chart = new ApexCharts(document.querySelector("#chartCompras"), options);

        chart.render();


</script>

