    <script type="text/javascript">

        var a = JSON.parse('@Html.Raw(ViewBag.Teste)')

        var options = {
            chart: {
                background: "#fff",
                height: 370,
                width: "100%",
                type: 'line',
                shadow: {
                    enabled: true,
                    color: '#000',
                    top: 18,
                    left: 7,
                    blur: 10,
                    opacity: 1
                },
                toolbar: {
                    show: false
                }
            },
            colors: ['#77B6EA', '#545454'],
            dataLabels: {
                enabled: true,
            },
            stroke: {
                curve: 'smooth'
            },
            series: a,
            title: {
                text: 'Rendimentos mensais',
                align: 'center'
            },
            grid: {
                borderColor: '#e7e7e7',
                row: {
                    colors: ['#f3f3f3', 'transparent'], // takes an array which will be repeated on columns
                    opacity: 0.5
                },
            },
            markers: {

                size: 6
            },
            xaxis: {
                categories: ['Jan', 'Fev', 'Mar','Abr', 'Mai', 'Jun', 'Jul', 'Ago', 'Set', 'Out', 'Nov', 'Dez'],
                title: {
                    text: '.'
                }
            },
            legend: {
                position: 'top',
                horizontalAlign: 'right',
                floating: true,
                offsetY: -25,
                offsetX: -5
            },
            tooltip: {
                y: {
                    formatter: function (value, { seriesIndex, dataPointIndex, w }) {

                        var total = String(value);
                        var totalArr = ("" + value + "").split(".")
                        var range = totalArr.slice().length
                        if (range == 1) {
                            total = value + ".00"
                        }
                        else if (range == 2 && ("" + totalArr[1] + "").length == 1) {
                            total = value + "0"
                        }
                        var input = $("<input>").val(total)
                        input.mask('#.##0,00', { reverse: true });
                        return "R$ " + input.val()
                    },
                    title: {
                        formatter: (seriesName) => seriesName,
                    },
                }

            }
        }

        var chart = new ApexCharts(
            document.querySelector("#teste1"),
            options
        );

        chart.render();
